<?xml version='1.0' encoding='utf-8'?>
<widget id="com.nordiccustommade.dk" version="1.1.6" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Ã…ben og Rolig</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <plugin name="cordova-plugin-whitelist" spec="1" />
	  <plugin name="onesignal-cordova-plugin" spec="2.0.11" />
	  <plugin name="nl.kingsquare.cordova.background-audio" source="npm" />
    <content src="index.html" />
    <preference name="android-minSdkVersion" value="16" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="default" />
    <preference name="DisallowOverscroll" value="true" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="*" />
    <allow-navigation href="*" />
    <platform name="ios">
        <preference name="KeepRunning" value="true"/>
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon src="icon.png" />
          <!-- iPhone 6 / 6+ -->
        <icon src="res/icons/ios/icon-60@3x.png" platform="ios" width="180" height="180" />

        <!-- iPhone / iPod Touch  -->
        <icon src="res/icons/ios/icon-60.png" platform="ios" width="60" height="60" />
        <icon src="res/icons/ios/icon-60@2x.png" platform="ios" width="120" height="120" />

        <!-- iPad -->
        <icon src="res/icons/ios/icon-76.png" platform="ios" width="76" height="76" />
        <icon src="res/icons/ios/icon-76@2x.png" platform="ios" width="152" height="152" />
        <icon src="res/icons/ios/icon-83.5@2x.png" platform="ios" width="167" height="167" />

        <!-- Settings Icon -->
        <icon src="res/icons/ios/icon-small.png" platform="ios" width="29" height="29" />
        <icon src="res/icons/ios/icon-small@2x.png" platform="ios" width="58" height="58" />
        <icon src="res/icons/ios/icon-small@3x.png" platform="ios" width="87" height="87" />

        <!-- Spotlight Icon -->
        <icon src="res/icons/ios/icon-40.png" platform="ios" width="40" height="40" />
        <icon src="res/icons/ios/icon-40@2x.png" platform="ios" width="80" height="80" />
        <icon src="res/icons/ios/icon-40@3x.png" platform="ios" width="120" height="120" />

        <!-- iPhone / iPod Touch -->
        <icon src="res/icons/ios/icon.png" platform="ios" width="57" height="57" />
        <icon src="res/icons/ios/icon@2x.png" platform="ios" width="114" height="114" />

        <!-- iPad -->
        <icon src="res/icons/ios/icon-72.png" platform="ios" width="72" height="72" />
        <icon src="res/icons/ios/icon-72@2x.png" platform="ios" width="144" height="144" />

        <!-- iPhone Spotlight and Settings Icon -->
        <icon src="res/icons/ios/icon-small.png" platform="ios" width="29" height="29" />
        <icon src="res/icons/ios/icon-small@2x.png" platform="ios" width="58" height="58" />

        <!-- iPad Spotlight and Settings Icon -->
        <icon src="res/icons/ios/icon-50.png" platform="ios" width="50" height="50" />
        <icon src="res/icons/ios/icon-50@2x.png" platform="ios" width="100" height="100" />
        
        <!-- Apple Watch ikoner -->
        <!-- Home screen on Apple Watch (38mm/42mm), Long-Look notification on Apple Watch (38mm) -->
        <icon src="res/icons/ios/icon-40@2x.png" platform="ios" width="80" height="80" /> 
        <!-- Long-Look notification on Apple Watch (42mm) -->
        <icon src="res/icons/ios/icon-44@2x.png" platform="ios" width="88" height="88" /> 
        <!-- Short-Look notification on Apple Watch (38mm) -->
        <icon src="res/icons/ios/icon-86@2x.png" platform="ios" width="172" height="172" /> 
        <!-- Short-Look notification on Apple Watch (42mm) -->
        <icon src="res/icons/ios/icon-98@2x.png" platform="ios" width="196" height="196" /> 
        <!-- Notification center on Apple Watch (38mm) -->
        <icon src="res/icons/ios/icon-24@2x.png" platform="ios" width="48" height="48" /> 
        <!-- Notification center on Apple Watch (42mm) -->
        <icon src="res/icons/ios/icon-27.5@2x.png" platform="ios" width="55" height="55" /> 
        <!-- Settings in the Apple Watch companion app on iPhone -->
        <icon src="res/icons/ios/icon-29@2x.png" platform="ios" width="58" height="58" /> 
        <!-- Settings in the Apple Watch companion app on iPhone 6 Plus -->
        <icon src="res/icons/ios/icon-29@3x.png" platform="ios" width="87" height="87" /> 

        <splash src="splash.png" />

        <splash platform="ios" height="480" width="320" src="res/screens/ios/screen-iphone-portrait.png" />
        <splash platform="ios" height="960" width="640" src="res/screens/ios/screen-iphone-portrait-2x.png" />
        <splash platform="ios" height="1024" width="768" src="res/screens/ios/screen-ipad-portrait.png" />
        <splash platform="ios" height="2048" width="1536" src="res/screens/ios/screen-ipad-portrait-2x.png" />
        <splash platform="ios" height="768" width="1024" src="res/screens/ios/screen-ipad-landscape.png" />
        <splash platform="ios" height="1536" width="2048" src="res/screens/ios/screen-ipad-landscape-2x.png" />
        <splash platform="ios" height="1136" width="640" src="res/screens/ios/screen-iphone-568h-2x.png" />
        <splash platform="ios" height="1334" width="750" src="res/screens/ios/screen-iphone-portrait-667h.png" />
        <splash platform="ios" height="2208" width="1242" src="res/screens/ios/screen-iphone-portrait-736h.png" />
        <splash platform="ios" height="1242" width="2208" src="res/screens/ios/screen-iphone-landscape-736h.png" />
    </platform>
    <config-file platform="ios" parent="UIBackgroundModes" overwrite="true">
  	   <array>
    		   <string>audio</string>
  	   </array>
    </config-file>
    <platform name="android">
		    <preference name="KeepRunning" value="true"/>
        <allow-intent href="market:*" />
        <icon src="icon.png" />

        <icon platform="android" qualifier="ldpi" src="res/icons/android/icon-36-ldpi.png" />
        <icon platform="android" qualifier="mdpi" src="res/icons/android/icon-48-mdpi.png" />
        <icon platform="android" qualifier="hdpi" src="res/icons/android/icon-72-hdpi.png" />
        <icon platform="android" qualifier="xhdpi" src="res/icons/android/icon-96-xhdpi.png" />
        <icon platform="android" qualifier="xxhdpi" src="res/icons/android/icon-144-xxhdpi.png" />
        <icon platform="android" qualifier="xxxhdpi" src="res/icons/android/icon-192-xxxhdpi.png" />

        <splash src="splash.png" />

        <splash platform="android" qualifier="land-hdpi" src="res/screens/android/screen-hdpi-landscape.png" />
        <splash platform="android" qualifier="land-ldpi" src="res/screens/android/screen-ldpi-landscape.png" />
        <splash platform="android" qualifier="land-mdpi" src="res/screens/android/screen-mdpi-landscape.png" />
        <splash platform="android" qualifier="land-xhdpi" src="res/screens/android/screen-xhdpi-landscape.png" />
        <splash platform="android" qualifier="port-hdpi" src="res/screens/android/screen-hdpi-portrait.png" />
        <splash platform="android" qualifier="port-ldpi" src="res/screens/android/screen-ldpi-portrait.png" />
        <splash platform="android" qualifier="port-mdpi" src="res/screens/android/screen-mdpi-portrait.png" />
        <splash platform="android" qualifier="port-xhdpi" src="res/screens/android/screen-xhdpi-portrait.png" />
    </platform>
</widget>
